<div class="edit_settings" style="color:#FFF">
<h2 style="color:#C4C4C4;">Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, hint: "Enter E-mail here", required: true, autofocus: true, input_html: { style: 'border-radius: 10px; width: 80vh;' } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password", style: "border-radius: 10px; width: 80vh"} %>
    <%= f.input :password_confirmation,
                hint: "We need you to confirm your new password here",
                required: false,
                input_html: { autocomplete: "new-password", style: "border-radius: 10px; width: 80vh"} %>
    <%= f.input :current_password,
                hint: "We need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password", style: "border-radius: 10px; width: 80vh"} %>
        <%= f.input :bio,
                hint: "Let others know about yourself",
                required: true,
                input_html: { autocomplete: "current-password", style: "border-radius: 10px; width: 80vh"} %>
  </div>

  <div class="form-actions btn btn-primary" style="margin-bottom:3vh; box-shadow: 3px 1px 9px 0px rgba(28, 28, 28, 0.75);">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<div>Feeling unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger", style: "margin-top: 3vh; margin-bottom: 3vh; box-shadow: 3px 1px 9px 0px rgba(28, 28, 28, 0.75);" %></div>
</div>

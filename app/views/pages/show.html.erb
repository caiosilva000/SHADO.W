<div class="container">
  <div class="top_card">
    <div class="profile_top">
      <%= image_tag @user.profile_pic , class: "profile_pic_show" %>
      <h4 class="profile-name-show"><strong><%= @user.user_name %></strong></h4></h4>



        <div class="bio-box-show">
          <p class="bio-text-show"><small>Biography: Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut lab consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut lab</small></p>
        </div>


    <div class="d-flex my-3 justify-content-center">
      <div class="d-flex stats-btns-box-show">
        <div class="d-flex btns-single-show">
          <% if @follow && @follow.any? %>
            <%= link_to follow_path(@follow.take), method: :delete, data: { turbo_method: :delete },style: "text-decoration:none; backgroundcolor: blue" do %>
              Unfollow
            <% end %>
          <% else %>
            <% if current_user != @user %>
              <%= link_to user_follows_path(@user), method: :post, data: { turbo_method: :post } do %>
                Follow
              <% end %>
            <% end %>
          <% end %>
            </div>
              <div class="d-flex btns-single-show">
            <p class="d-flex btn-text-show"> Followers <%= @user.followers.count %></p>
        </div>
        <div class="d-flex btns-single-show">
          <p class="d-flex btn-text-show" > Following <%= @user.following.count %></p>
        </div>

        <div class="d-flex btns-single-show" style="background: white">
            <%= link_to "Book", new_user_booking_path(@user), style: "text-decoration:none; color:#05595B" %>
          <p class="d-flex btn-text-show"></p>
        </div>
      </div>
    </div>


    </div>

<ul class="index_list">
  <% @users.each do |user| %>
    <li>
      <div class="container">
        <div class="d-flex justify-content-center pt-5">
        <%= link_to user_path(user), style: 'text-decoration: none;' do %>
          <div class="cards-show">

            <div class="d-flex profile-infos-show">


              <% if user.profile_pic.present? %>
                <%= image_tag user.profile_pic, class: "profile-pic-show" %>
              <% end %>
                <img src="https://ghchart.rshah.org/<%= user.github_nickname %>" alt= "">

            </div>

            <h4 class="profile-name-show text-left">
              <strong style="padding: 18px;"><%= user.user_name %></strong>
            </h4>
          </div>

        <% end %>

      </div>
    </li>
  <% end %>
</ul>

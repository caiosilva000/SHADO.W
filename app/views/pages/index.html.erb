<ul class="index_list">
  <% @users.each do |user| %>
    <li>
      <div class="container">
        <div class="d-flex justify-content-center pt-5">

    <%= link_to user_path(user), style: 'text-decoration: none;' do %>
          <div class="cards-show">

            <% if user.senior == true %>
              <h4 class="profile-name-show text-left">
                <strong><%= user.user_name %></strong>
                <%= image_tag "checkmark.png", style: "width: 2%; margin-bottom: 1%" %>
              </h4>
              <% else %>
                <h4 class="profile-name-show text-left">
                  <strong><%= user.user_name %></strong>
                </h4>
              <% end %>
            <div class="d-flex profile-infos-show">
              <% if user.profile_pic.present? %>
                  <%= image_tag user.profile_pic, class: "profile-pic-show", style: "margin-right: 15%" %>
                <% else  %>
                  <%= image_tag "placeholder.png", class: "profile-pic-show", style: "margin-right: 15%" %>
              <% end %>
                <img src="https://ghchart.rshah.org/<%= user.github_nickname %>" alt= "" style="margin-bottom:16px;">
            </div>

            <div class="languages d-flex justify-content-end">
              <% user.top_languages.each do |language| %>
                <div class="boxes-grid-show dashboard-skill">
                  <span class="skill-icons"><i class="<%= @fa_map[language] %> mr-2"></i> <p><%= language %></p> </span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>


<div class ="dashboard_container">

  <div class="left_side">
    <div class ="sidebar">
      <div class="sidebar_links">
        <%= link_to root_path, class: "nav-link" do %>
          <i class="fa-solid fa-user"></i><p>Profile</p>
        <% end %>
        <%= link_to root_path, class: "nav-link" do %>
          <i class="fa-solid fa-house"></i><p> Dashboard</p>
        <% end %>
        <%= link_to root_path, class: "nav-link" do %>
          <i class="fa-solid fa-message"></i><p> Messages</p>
        <% end %>
        <%= link_to root_path, class: "nav-link" do %>
          <i class="fa-solid fa-money-check"></i><p> Payments</p>
        <% end %>
      </div>

      <div class="sidebar_userlinks">
        <div>
          <%= link_to root_path, class: "nav-link" do %>
            <i class="fa-solid fa-gear"></i><p> Settings</p>
          <% end %>
            <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" do %>
            <i class="fa-solid fa-right-from-bracket"></i><p> Log Out</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="bottom_box">
      <p>Upgrade to Pro</p>
    </div>
  </div>

  <div class="right_side">
    <div class="search_top">
      <%= form_with url: users_path, method: :get do %>
        <div class="searchbar_container">
          <%= text_field_tag :query,
            params[:query],
            class: "searchbar form-control",
            placeholder: "Search for users" %>
        </div>
      <% end %>
      <%= link_to root_path, class: "searchbar_button" do %>
        <i class="fa-solid fa-message"></i>
      <% end %>
      <%= link_to root_path, class: "searchbar_button" do %>
        <i class="fa-solid fa-bell"></i>
      <% end %>
      <h1 class="logo">SHADO.W</h1>
    </div>

    <%= yield %>
  
  </div>
</div>
